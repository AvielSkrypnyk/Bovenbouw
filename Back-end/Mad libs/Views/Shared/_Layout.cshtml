<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Mad_libs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css2?family=Freckle+Face&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Mad_libs.styles.css" asp-append-version="true"/>
</head>
<body>
<h1>Mad Libs</h1>
<div class="container">
    <nav>
        <a href="@Url.Action("Index", "Paniek")">Er heerst paniek...</a>
        <a href="@Url.Action("Index", "Onkunde")">Onkunde</a>
    </nav>
    <main role="main" class="form-container">
        @RenderBody()
    </main>
    <footer>
        <a>&COPY; Deze website is gemaakt door Aviel in 2025</a>
    </footer>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>